<div class="container_1box">

  <div class="container_header">
  </div><!-- container_header -->

  <div class="unit_content">

    <%= render "admin/products/header" %>

    <div class="section">
      <%= semantic_form_for [:admin, @product], :url => update_booking_constraints_admin_product_path(@product) do |f| %>

        <h4>예약가능 인원 (1일)</h4>

        <% unless @product.free_type_ticket? %>

          <%= f.inputs do %>
            <%= f.input :constraints_max_booking_counts, :as => :string, :label => display_resort(@product), :input_html => { :size => 5, :value => @product.max_booking_count_per_oneday } %>
          <% end %>

        <% else %>

          <%= f.inputs do %>
            <% RESORT_OPTIONS.each do |k, v| %>
              <%= f.input :constraints_max_booking_counts, :as => :string, :label => "#{v}", :input_html => { :name => "product[constraints_max_booking_counts][]", :size => 5, :value => @product.max_booking_count_per_oneday(k) } %>
            <% end %>
          <% end %>

        <% end %>

        <%= f.buttons do %>
          <%= f.submit "수정" %>
        <% end %>

      <% end %>
    </div>

  </div><!-- unit_content -->

</div><!-- container_1box -->

