<div class="container_1box">

  <div class="container_header">
  </div><!-- container_header -->

  <div class="unit_content">

    <%= render "admin/products/header" %>

    <div class="nav_history">
      <%= link_to "예약목록>", [:admin, :reservations] %>
    </div>

    <div class="section">
      <%= render "admin/reservations/section_reservation_detail", :reservation => @reservation %>
    </div>

    <div class="section">

      <%= semantic_form_for [:admin, @reservation, @order] do |f| %>
        <%= render "admin/orders/edit_form", :f  => f, :order => @order %>

        <%= f.submit "Update" %>
      <% end %>

    </div>

  </div><!-- unit_content -->

  <div class="unit_rail">
  </div><!-- unit_rail -->

</div><!-- container_1box -->



<script type="text/javascript">

  var toggle_shoe_options = function() {
    new Ajax.Request("/orders/toggle_shoe_options", {
      parameters: {
        shoe_type: Form.Element.getValue("order_shoe_type"),
        wrapper_id: '0'
      }
    });
  }
  
  Event.observe("order_shoe_type", "change", toggle_shoe_options.bindAsEventListener(this));

</script>
