<div class="container_1box">

  <div class="container_header">
    <%= render "reservations/main_nav" %>
  </div><!-- container_header -->

  <div class="unit_content">

    <div class="reservation_header">
      <%= render "coupons/section_coupon_detail", :coupon => @coupon %>
    </div>

    <div class="section">
      <%= semantic_form_for @reservation do |f| %>
        <%= f.inputs do %>
          <%= f.input :user_name, :as => :string, :label => "사용자명" %>
          <%= f.input :resort, :as => :string, :label => "스키장" %>
          <%= f.input :part_time, :as => :select, :include_blank => false, :collection => ["오전+오후", "오후+야간"], :label => "시간선택" %>
          <%= f.input :shoe_type, :as => :select, :include_blank => false, :collection => ["스키", "보드"], :label => "장비구분" %>
          <%= f.input :board_stance, :as => :string, :label => "스탠스", :hint => "보드 선택시에 선택해 주세요" %>
          <%= f.input :height, :as => :string, :label => "신장", :input_html => { :size => 5 }, :hint => "단위는 센티미터(cm)" %>
          <%= f.input :shoe_size, :as => :string, :label => "발사이즈", :input_html => { :size => 5}, :hint => "단위는 밀리미터(mm)" %>
        <% end %>

        <%= f.hidden_field :coupon_id, :value => @coupon.id %>
        <%= f.hidden_field :product_id, :value => @product.id %>

        <%= f.buttons do %>
          <%= f.submit "예약" %>
        <% end %>
      <% end %>
    </div>

  </div><!-- unit_content -->

</div><!-- container_1box -->
